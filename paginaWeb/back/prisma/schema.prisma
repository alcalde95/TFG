// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  email    String @id
  password String
  role     String
  client   Clients?
  instructor Instructors?

}

model Clients {
  email       String @unique
  UUID_Client String @unique

  user           Users             @relation(fields: [email], references: [email])
  session_client Sessions_Client[]
  @@id([email, UUID_Client])

}

model Instructors {
  email           String @unique
  UUID_Instructor String  @unique
  user            Users    @relation(fields: [email], references: [email])
  classes         Class[]
  @@id([email, UUID_Instructor])

}

model Class {
  UUID_Class   String     @id
  Name         String
  Photo        Bytes
  Description  String
  Max_Capacity Int
  Duration     DateTime
  instructorID String     @unique
  instuctor    Instructors @relation(fields: [instructorID], references: [UUID_Instructor])
  session      Sessions[]
}

model Sessions {
  UUID_Session String   @id
  DATA_TIME    DateTime
  classId      String   @unique
  class        Class    @relation(fields: [classId], references: [UUID_Class])

  session_client Sessions_Client[]
}

model Sessions_Client {
  UUID_Client  String
  client       Clients  @relation(fields: [UUID_Client], references: [UUID_Client])
  UUID_Session String
  session      Sessions @relation(fields: [UUID_Session], references: [UUID_Session])
  Attend       Boolean
  Justified    Boolean

  @@id([UUID_Client, UUID_Session])
}
